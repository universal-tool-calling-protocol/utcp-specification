  background-size: contain;
  background-repeat: no-repeat;
  display: inline-block;
  filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.3));
  animation: githubGlow 2s ease-in-out infinite alternate;
}

@keyframes githubGlow {
  0% {
    filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.3));
    transform: scale(1);
  }
  100% {
    filter: drop-shadow(0 0 12px rgba(255, 255, 255, 0.7));
    transform: scale(1.05);
  }
}

.starText {
  margin-right: 0.75rem;
  font-weight: 700;
  letter-spacing: 0.5px;
}

.starCount {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10px);
  padding: 0.4rem 1rem;
  border-radius: 25px;
  font-size: 0.95rem;
  font-weight: 800;
  margin-left: 0.75rem;
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2);
  min-width: 60px;
  text-align: center;
  transition: all 0.3s ease;
  /* Note: This class is used for both stars and followers count */
}

.loading {
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

.productHuntBadge {
  margin-top: 2rem;
  transition: all 0.3s ease;
}

.productHuntBadge a {
  display: inline-block;
  transition: all 0.3s ease;
}

.productHuntBadge:hover a {
  transform: translateY(-2px);
}

.productHuntBadge img {
  border-radius: 8px;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(255, 255, 255, 0.1);
}

.productHuntBadge:hover img {
  box-shadow: 0 8px 25px rgba(255, 255, 255, 0.2);
}

@media screen and (max-width: 996px) {
  .heroBanner {
    padding: 4rem 1rem;
    min-height: 70vh;
  }
  
  .heroTitle {
    font-size: 3rem !important;
  }
  

}

@media screen and (max-width: 768px) {
  .heroBanner {
    padding: 3rem 1rem;
    min-height: 60vh;
  }
  
  .heroTitle {
    font-size: 2.5rem !important;
  }
  
  .heroSubtitle {
    font-size: 1.2rem !important;
  }
  

  
  .buttons {
    flex-direction: column;
    gap: 1rem;
  }
  
  .productHuntBadge {
    margin-top: 1.5rem;
  }
  
  .productHuntBadge img {
    max-width: 100%;
    height: auto;
  }
}
